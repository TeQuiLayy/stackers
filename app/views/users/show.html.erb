<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Subject</strong>
  <%= link_to "New", new_subject_path %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each_with_index do |subject, idx| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.color_code %></td>
          <td><%= subject.time %></td>
          <td><%= link_to '1時間追加', advance_subject_path(subject), method: :patch %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <br>
      <% end %>
    </tbody>
  </table>
</p>

